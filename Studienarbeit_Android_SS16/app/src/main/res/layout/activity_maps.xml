<fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:map="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Activity.MapsActivity">

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/trackButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:src="@drawable/ic_play_arrow_black_24dp"
        android:padding="10dp"
        android:layout_marginBottom="24dp"
        android:layout_marginRight="24dp"
        android:tint="@android:color/white"
        android:onClick="startOrEndTrack"/>
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/loginButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|right"
        android:src="@drawable/ic_person_black_24dp"
        android:padding="10dp"
        android:layout_marginTop="24dp"
        android:layout_marginRight="24dp"
        android:tint="@android:color/white"/>
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/trackListButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|left"
        android:src="@drawable/ic_format_align_left_black_24dp"
        android:padding="10dp"
        android:layout_marginBottom="24dp"
        android:layout_marginLeft="24dp"
        android:tint="@android:color/white"/>
    <ProgressBar
        android:id="@+id/spinnerProgress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|center_horizontal"
        style="@android:style/Widget.Holo.Light.ProgressBar.Large"/>

    <TextView
        android:id="@+id/spinnerText"
        android:background="#00000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/spinnerProgress"
        android:layout_alignLeft="@id/spinnerProgress"
        android:layout_alignTop="@id/spinnerProgress"
        android:layout_alignRight="@id/spinnerProgress"
        android:layout_alignBottom="@id/spinnerProgress"
        android:layout_gravity="center_vertical|center_horizontal"
        android:text="GPS"/>

</fragment>






