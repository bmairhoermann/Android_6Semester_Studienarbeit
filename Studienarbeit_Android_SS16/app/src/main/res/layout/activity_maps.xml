<fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:map="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Activity.MapsActivity">

    <Button
        android:id="@+id/trackButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|bottom"
        android:text="Route Starten"
        android:padding="10dp"
        android:layout_marginTop="20dp"
        android:paddingRight="10dp"
        android:onClick="startOrEndTrack"/>

    <ProgressBar
        android:id="@+id/spinnerProgress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|center_horizontal"
        style="@android:style/Widget.Holo.Light.ProgressBar.Large"/>

    <TextView
        android:id="@+id/spinnerText"
        android:background="#00000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/spinnerProgress"
        android:layout_alignLeft="@id/spinnerProgress"
        android:layout_alignTop="@id/spinnerProgress"
        android:layout_alignRight="@id/spinnerProgress"
        android:layout_alignBottom="@id/spinnerProgress"
        android:layout_gravity="center_vertical|center_horizontal"
        android:text="GPS"/>

</fragment>






